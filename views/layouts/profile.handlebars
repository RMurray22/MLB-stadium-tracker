<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Enter a stadium you've visted:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="stadium-name">Stadium Name:</label>
        <input class="form-input" type="text" id="stadium-name" name="stadium-name" />
      </div>
      <div class="form-group">
        <label for="favorite-team">Favorite Team:</label>
        <textarea class="form-input" id="favorite-team" name="favorite-team"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if stadiums.length}}
  <div class="col-md-6 project-list">
    <h3>Stadiums visted:</h3>

    {{#each stadiums as |stadium|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{stadium.id}}">{{stadium.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{stadium.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>